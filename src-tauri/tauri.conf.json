{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "AHQ Store",
    "version": "../package.json"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "notification": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://github.com/ahqsoftwares/ahq-store-data/*",
          "https://github.com/ahqsoftwares/tauri-ahq-store/releases/*",
          "https://api.github.com/repos/ahqsoftwares/*",
          "https://rawcdn.githack.com/*",
          "https://ahqstore-server.onrender.com/",
          "https://ahqstore-server.onrender.com/*"
        ]
      },
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "scope": [
          "$APP",
          "$APP/database",
          "$APP/database/",
          "$APP/database/config.astore",
          "$APP/database/config.developer"
        ]
      },
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Business",
      "copyright": "AHQ Softwares",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ahqstore.app",
      "longDescription": "AHQ Store\nA New Store for downloading apps!",
      "resources": ["icons/pwd_reset.png"],
      "shortDescription": "AHQ Store",
      "targets": ["msi", "updater", "deb", "appimage"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "allowDowngrades": false,
        "wix": {
          "template": "assets/install.wxs"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "center": true,
        "height": 760,
        "resizable": true,
        "title": "AHQ Store",
        "width": 1240,
        "minHeight": 700,
        "minWidth": 1200,
        "visible": false,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
